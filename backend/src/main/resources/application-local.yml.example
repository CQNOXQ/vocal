# 本地开发环境配置示例
# 复制此文件为 application-local.yml 并修改为你的实际配置

spring:
  datasource:
    url: jdbc:mysql://localhost:3306/studytracker?useSSL=false&serverTimezone=UTC&characterEncoding=utf8&allowPublicKeyRetrieval=true
    username: root
    password: your_mysql_password
  
  profiles:
    active: local

app:
  jwt:
    secret: defaultSecretKeyForDevelopmentOnlyPleaseChangeInProductionAtLeast32CharactersLong
    access-token-ttl-minutes: 60
    refresh-token-ttl-days: 7
  cors:
    allowed-origins: http://localhost:5173

logging:
  level:
    com.studytracker: DEBUG
    org.springframework.security: DEBUG





